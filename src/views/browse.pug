doctype html
html(lang="en")
    include includes/head.pug
    +seo("Browse the Library", "Navigate to a specific room, wall, shelf, book and page of the Library.")

    body
        include includes/nav.pug

        main
            img.Banner(src="/image/shelves.png", alt="A pencil drawing of a man in a hooded robe standing next to large shelves of books")

            form.BrowseForm
                label
                    p Room
                    textarea(name="room", rows=5, required=true, placeholder="Enter an alphanumeric room identifier made up of the characters 0-9 and a-v.")

                div.Numbers
                    label
                        p Wall
                            |
                            |
                            span 1-4
                        input(name="wall", type="number", min=1, max=4, value=1, required=true)

                    label
                        p Shelf
                            |
                            |
                            span 1-5
                        input(name="shelf", type="number", min=1, max=5, value=1, required=true)

                    label
                        p Book
                            |
                            |
                            span 1-32
                        input(name="book", type="number", min=1, max=32, value=1, required=true)

                    label
                        p Page
                            |
                            |
                            span 1-410
                        input(name="page", type="number", min=1, max=410, value=1, required=true)

                button Go

        include includes/footer.pug

    script(src="/js/handleBrowseForm.js", type="text/javascript")
